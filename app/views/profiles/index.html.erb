

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Auth0</th>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>City</th>
      <th>Province</th>
      <th>Postal code</th>
      <th>Home phone number</th>
      <th>Cell phone number</th>
      <th>Work phone number</th>
      <th>T shirt size</th>
      <th>Age group</th>
      <th>Emergency contact name</th>
      <th>Emergency contact number</th>
      <th>Notes</th>
      <th>Code of conduct</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.auth0_id %></td>
        <td><%= profile.email %></td>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.address %></td>
        <td><%= profile.city %></td>
        <td><%= profile.province %></td>
        <td><%= profile.postal_code %></td>
        <td><%= profile.home_phone_number %></td>
        <td><%= profile.cell_phone_number %></td>
        <td><%= profile.work_phone_number %></td>
        <td><%= profile.t_shirt_size %></td>
        <td><%= profile.age_group %></td>
        <td><%= profile.emergency_contact_name %></td>
        <td><%= profile.emergency_contact_number %></td>
        <td><%= profile.notes %></td>
        <td><%= profile.code_of_conduct %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

